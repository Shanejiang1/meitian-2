.cantainer {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
}

.confirm {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding: 26rpx 20rpx 0 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  width: 640rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

textarea {
  background: #f4f4f4;
  border-radius: 8rpx;
  width: 100%;
  height: 120rpx;
  margin-bottom: 22rpx;
  color: #333333;
  padding: 10rpx 10rpx;
  font-size: 28rpx;
}

.actions {
  display: flex;
  width: 100%;
  position: relative;
}

.actions>view {
  width: 50%;
  text-align: center;
  height: 66rpx;
}

.actions>view.active {
  opacity: 0.5;
}

.actions .sure {
  color: #e17f77;
}

.actions::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 4rpx;
  height: 70%;
  background: #e17f77;
}